{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}